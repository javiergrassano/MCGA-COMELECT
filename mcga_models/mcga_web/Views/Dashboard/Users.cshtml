@model IEnumerable<ArtEx.BL.Models.UserModel>


<div class="row content container">

    <div class="artistForm">
        <div>
            <div class="title">
                <span>Usuarios Registrados</span>
            </div>

        </div>

        <hr />

        <table class="table">
            <tr>
                <th>
                    Usuario
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.username)
                    </td>
                    <td>
                        @{
                            if (item.isAdmin)
                            {
                                <div>
                                    Es administrador
                                    <a class="boton_amarillo" href="@Url.Action("ChangeRole", new { id = item.id })">Quitar</a>
                                </div>
                            }
                            else
                            {
                                <a class="boton_amarillo" href="@Url.Action("ChangeRole", new { id = item.id })">Agregar como administrador</a>
                            }
                        }
                    </td>
                </tr>
            }

        </table>
        @Html.ActionLink("Volver al dashboard", "Index", null, null, new { @class = "boton_amarillo" })
        @*<br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

            </div>
        </div>*@
    </div>

</div>