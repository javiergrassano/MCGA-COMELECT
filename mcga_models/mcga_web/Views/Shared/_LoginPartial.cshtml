@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <li>
            @Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li>@Html.ActionLink("Mis compras", "list", "orders", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>

        if (User.IsInRole("Admin"))
        {
            <li>@Html.ActionLink("Dashboard", "index", "dashboard")</li>
        }

        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    }
}
else
{
    <li>@Html.ActionLink("Registrarse", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
    <li>@Html.ActionLink("Ingreso", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
}
